# Managed by Puppet

check process unicorn_<%= name %>
  with pidfile <%= real_pid_file %>
  start program = "/usr/bin/env HOME=/home/<%= command_uid %> /bin/bash -l -c 'source /usr/local/rvm/scripts/rvm && cd <%= rails_root %> && <%= env_vars %> rvm <%= rvm_ruby %> do bundle exec unicorn_rails -E <%= rails_env %> -c <%= config_file %> -D'" as uid <%= command_uid %> and gid <%= command_uid %>
  stop program = "/bin/sh -c 'kill `cat <%= real_pid_file %>` && rm -f <%= real_pid_file %> ; exit 0;'"
  <% if group then %>group <%= group %><% end %>

